---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Container from "../components/Container.astro";
import MainProjectCard from "../components/MainProjectCard.astro";
import TechCard from "../components/TechCard.astro";
---

<Navbar />

<Layout title="Albert Stan - Homepage">
  <main>
    <Container bg="bg-neutral-100 text-black">
      <div id="introduction" class="py-5 md:py-10">
        <div class="flex flex-col md:flex-row">
          <img
            class="order-first md:order-last h-44 w-full md:w-1/2 md:h-1/2 ml-auto object-cover"
            src="/me.png"
            alt="Me :)"
          />

          <div class="order-last md:order-first mt-1 md:mt-0">
            <h2>Hey there! &#128075;</h2>
            <h5>I'm Albert, a junior full-stack developer</h5>
          </div>
        </div>

        <div class="relative">
          <img
            class="absolute w-3/4 -inset-y-2 -right-2 rotate-6"
            src="/based-here-3.png"
            alt={`"based here" with arrow pointing to Mallorca, Spain`}
          />

          <img
            class="md:w-2/3 mx-auto mt-5 md:mt-10 -ml-28"
            src="/iphone-map-palma.png"
            alt="iPhone with Apple Maps pinpointing Mallorca, Spain"
          />
        </div>
      </div>
    </Container>

    <Container bg="bg-neutral-900">
      <div id="experiences-and-technologies" class="py-5 md:py-10">
        <h3>Experiences & Technologies</h3>

        <div class="flex items-center py-5">
          <h5 class="w-3/4">
            I have experience working with JavaScript & TypeScript in full-stack applications, and
            I'm currently working on implementing iOS apps in Swift.
          </h5>

          <div class="w-1/4 space-y-3">
            <img class="h-12 mx-auto rounded" src="/tech/javascript-logo.jpg" alt="" />
            <img class="h-12 mx-auto rounded" src="/tech/typescript-logo.jpg" alt="" />
            <img class="h-12 mx-auto rounded" src="/tech/swift-logo.svg" alt="" />
          </div>
        </div>

        <div>
          <h4 class="text-center py-5">Lorem ipsum dolor sit amet.</h4>

          <div class="flex justify-around space-x-3">
            <img class="h-12 rounded" src="/tech/postgres-logo.jpg" alt="" />
            <img class="h-12 rounded" src="/tech/redis-logo.jpg" alt="" />
            <img class="h-12 rounded" src="/tech/graphql-logo.jpg" alt="" />
            <img class="h-12 rounded" src="/tech/git-logo.jpg" alt="" />
          </div>

          <img src="/mac-xcode.png" alt="" />
        </div>
      </div>
    </Container>

